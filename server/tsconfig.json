{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // Node-friendly ESM
    "moduleResolution": "NodeNext", // must match module
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
